{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Components",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "path": {
      "type": "string",
      "description": "Đường dẫn tới thư mục cần tạo component",
      "alias": "pa",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "project": {
      "type": "string",
      "description": "project cần tạo component",
      "alias": "pj",
      "$default": {
        "$source": "argv",
        "index": 2
      }
    }
  },
  "required": ["name", "path"]
}
